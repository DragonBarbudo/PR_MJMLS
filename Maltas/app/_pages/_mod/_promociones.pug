section#promociones
  .container
    .row.justify-content-center.mt-5.mb-1: h2 Promociones
    .row.justify-content-center.mt-1.mb-3: img(src="app/img/ico_promos.png").img-fluid.mx-auto.icosketch
    .row.justify-content-center.my-5.text-center
      .carousel.slide(data-ride="carousel")#promobanner
        .carousel-inner
          .carousel-item.active
            img(src="app/img/promo.jpg").d-block.w-100
          .carousel-item
            img(src="app/img/promo.jpg").d-block.w-100
        .carousel-control-prev(href="#promobanner" role="button" data-slide="prev")
          span.carousel-control-prev-icon
        .carousel-control-next(href="#promobanner" role="button" data-slide="next")
          span.carousel-control-next-icon