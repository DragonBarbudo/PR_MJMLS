<mjml>

  <mj-head>
	
    <mj-attributes>
      <mj-text align="center" color="#555" />
      <mj-section background-color="#fff" />
    </mj-attributes>

  </mj-head>

  <mj-body background-color="#eee">
    <mj-section>
    <mj-image src="http://34.200.208.80/wp-content/uploads/2018/07/favicon.png" width="100px" margin="20px"></mj-image>
    </mj-section>
    <mj-section>
    	<mj-text align="center" font-size="18px">Simulador Financiero</mj-text>
    </mj-section>
    
